<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/gradient_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Posts.CreatePostActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <RelativeLayout
        android:id="@+id/post_image1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/darker_gray">

        <ImageView
            android:id="@+id/create_post_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/empty_post"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Click here to upload an image"
            android:textSize="20sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/create_post_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Post Caption" />

    <Button
        android:id="@+id/create_post_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Post!" />


</LinearLayout>